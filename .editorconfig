# editorconfig.org
root = true

[*]
end_of_line = LF
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.php,*.xml}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[*.scss]
indent_style = tab
indent_size = 4
tab_width = 4
